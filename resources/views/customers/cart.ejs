<section class="cart py-16">
    <% if(session.cart) { %> <!-- if there is something in the cart then show  this-->
    <div class="order container mx-auto xl:w-1/2">
        <div class="flex items-centre border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-xl">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items) ) {  %><!-- ejs tag to use for of loop ..but items is an object.. therefore we use object.values to convert items to array of pizza objects-->
            <div class="flex items-center my-4">
                <img class="w-20" src="/img/<%= pizza.item.image %>" alt="">
                <div class=" flex-1 ml-4">
                   <h1><%= pizza.item.name %> </h1> 
                   <span><%= pizza.item.size %></span>
                </div>
                <span class="flex-1"><%= pizza.qty %> Pcs</span>
                <span class="font-bold text-lg">₹<%= pizza.item.price * pizza.qty %></span>
            </div>
            <% } %>
        </div>
        <hr>
        <div class="text-right py-4">
            <span class=" text-lg font-bold"> Total Amount</span>
            <span class="amount text-xl font-bold ml-2">₹<%= session.cart.totalPrice %></span>
        </div>
        <% if(user) { %>
        <div class="text-right">
            <form action="/order" method ="POST" class="mt-12">
                <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone number">
                <input name="address" class="border border-gray-400 p-2 w-1/2 " type="text" placeholder="Address">
                <div>
                    <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
                </div>
            </form>
        </div>
        <%}else{%>
        <div class="text-right">
        <a href="/login" class=" inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6 ">Login to continue</a> 
        </div>
        <%}%>
    </div>
</div>
<% } else { %> <!-- or else this empty cart-->
<div class="empty-cart py-16">
<div class="container mx-auto text-center">
    <h1 class="text-3xl font-bold mb-2">Cart Empty</h1>
    <p class="text-gray-500 text-lg mb-12">
    You probably haven't ordered a pizza yet.<br>
    To order a pizza,go to the main page.
    </p>
    <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
    <a href="/" class="inline-block px-6 py-2 rounded-full btm-primary text-white font-bold mt-12">Go back</a>  <!--to make anchor tag look like button in tailwind css -->

</div>
 
</div>
<% } %>
</section>